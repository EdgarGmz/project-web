# ===========================================
# CONFIGURACIÓN DE ENTORNO - PROJECT WEB API
# ===========================================

# Entorno de desarrollo
NODE_ENV=development

# Puerto del servidor
PORT=3000

# ===========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ===========================================

# Por defecto usa SQLite para desarrollo
# Para cambiar a PostgreSQL, descomenta USE_POSTGRES=true

# Activar PostgreSQL (comentar esta línea para usar SQLite)
# USE_POSTGRES=true

# Configuración PostgreSQL (solo cuando USE_POSTGRES=true)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=project_web_db
DB_USER=postgres
DB_PASSWORD=tu_password_aqui

# ===========================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ===========================================

# Clave secreta para JWT (cambiar en producción)
JWT_SECRET=tu_clave_secreta_super_segura_aqui
JWT_EXPIRES_IN=24h

# ===========================================
# CONFIGURACIÓN DE CORS
# ===========================================

# URLs permitidas para CORS (separadas por comas)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# CONFIGURACIÓN DE LOGS
# ===========================================

# Nivel de logs (error, warn, info, debug)
LOG_LEVEL=info

# ===========================================
# CONFIGURACIÓN DE ARCHIVOS
# ===========================================

# Tamaño máximo de archivos subidos (en MB)
MAX_FILE_SIZE=10

# Directorio para archivos subidos
UPLOAD_DIR=uploads

# ===========================================
# CONFIGURACIÓN DE EMAIL (opcional)
# ===========================================

# Configuración SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=tu_email@gmail.com
# SMTP_PASS=tu_password_app

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# URL base de la API en producción
# API_BASE_URL=https://tu-api.com

# Base de datos PostgreSQL en producción
# DATABASE_URL=postgresql://usuario:password@host:puerto/database