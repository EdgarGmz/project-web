{
  "name": "api",
  "version": "1.0.0",
  "description": "API para sistema de gestión de inventario y ventas",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "node -e \"require('./src/infrastructure/database/seeders').seedDatabase()\"",
    "seed:force": "node -e \"require('./src/infrastructure/database/seeders').seedDatabaseForce()\"",
    "db:drop": "node -e \"const fs = require('fs'); const path = './src/infrastructure/database/database.sqlite'; if(fs.existsSync(path)) { fs.unlinkSync(path); console.log('✅ Base de datos eliminada'); } else { console.log('ℹ️ Base de datos no existe'); }\"",
    "db:reset": "npm run db:drop && npx sequelize-cli db:migrate && npm run seed",
    "db:fresh": "npm run db:drop && npx sequelize-cli db:migrate",
    "db:status": "npx sequelize-cli db:migrate:status"
  },
  "keywords": [
    "api",
    "express",
    "sequelize",
    "inventory",
    "sales",
    "swagger"
  ],
  "author": "Edgar",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3"
  }
}
